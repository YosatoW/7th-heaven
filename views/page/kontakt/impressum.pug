//- /views/page/kontakt/impressum.pug

extends ../../layout.pug

block content
  section.page-left
    .container
      .intro-block.text-center
        h1 Impressum
      
      h3 #{contact.name}
      p #{contact.owner}
      p #{contact.address}
      p #{contact.add}
      p #{contact.city}, #{contact.plz}
      p #{contact.phone}
      p  
        a(href=`mailto:${contact.email.info}`)= contact.email.info
      <br>
      h3 Verantwortlich für den Inhalt gemäss § 55 Abs. 2 RStV:
      p #{contact.owner} (gleiche Anschrift)
      
      .note.text-center
        h3 Hinweis:
        p Das 7th Heaven ist eine fiktive Einrichtung im Stadtgebiet Midgar.
        p Alle Angaben dienen ausschliesslich Unterhaltungs- und Fan-Zwecken.
        p Keine Verbindung zu Shinra Electric Power Company AG – versprochen.