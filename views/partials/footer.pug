//- footer.pug

footer.site-footer
  .footer-inner
    // Spalte 1: Kontakt
    .footer-column
      ul.list-style-none
        h3 Kontakt
        li #{contact.name}
        li #{contact.address}
        li #{contact.add}
        li #{contact.city}, #{contact.plz}
        li #{contact.phone}
        li
          a(href=`mailto:${contact.email.info}`)= contact.email.info
        p Öffnungszeiten:
        ul.list-style-none
          li Montag – Donnerstag: 17:00 – 01:00
          li Freitag & Samstag: 17:00 – 03:00
          li Sonntag: 18:00 – 00:00

    // Spalte 2: Newsletter + dynamische Legal Links
    .footer-column
      h3 Informiert bleiben
      p Erfahre zuerst, was sich im Untergrund von Midgar tut – neue Drinks, geheime Events und Specials im 7th Heaven.
      form.newsletter(id="newsletterForm")
        input(type="email" id="newsletterEmail" placeholder="Ihre E-Mail" required)
        button(type="submit") →
      .legal-links
        ul.list-style-none
          each link in site.footer.links
            li: a(href=link.href)= link.title

    // Spalte 3: Social Icons dynamisch
    .footer-column
      h3 Folgen & Empfehlen Sie uns
      .social-icons
        each social in site.footer.social
          a(href=social.href target="_blank")
            img(src=social.icon alt=social.title)

// Newsletter Pop-up
.popup(style="display:none")
  .popup-content
    h3 Vielen Dank für deine Anmeldung!
    p Wenn die E-Mail bisher nicht drin war, steckt sie jetzt im System. Und keine Sorge — die Turks haben davon nichts mitbekommen."
    button.button1 OK